<div id="assignment-date-modal" class="modal hide fade">
  <%= form_tag assignment_path, method: :patch do %>
    <div class="modal-header">
      <h3>Change assignment dates <%= assignment.name %></h3>
    </div>
    <div class="modal-body">
      <%= hidden_field_tag :id, assignment.id %>

      <div class="field">
        <%= label_tag :active_at, "Active At: " %>
        <%= datetime_local_field_tag "assignment[:active_at]", assignment.active_at %>
      </div>
      <div class="field">
        <%= label_tag :due_at, "Due At: " %>
        <%= datetime_local_field_tag "assignment[:due_at]", assignment.due_at %>
      </div>

    </div>
    <div class="modal-footer">
      <a class="btn" data-dismiss="modal">Close</a>
      <%= submit_tag "Update Times", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
